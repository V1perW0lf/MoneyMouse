<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IncomeActivity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/monthlyIncome"
            android:imeOptions="actionDone"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.135" android:hint="@string/monthlyIncome"
            android:importantForAutofill="no" tools:targetApi="o"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:imeOptions="actionDone"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.506" android:hint="@string/newMoney"
            android:importantForAutofill="no" tools:targetApi="o" android:id="@+id/newMoneyBox"/>

</android.support.constraint.ConstraintLayout>